{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "automerge": false,
  "ignoreDeps": [
    "org.apache.maven:maven-core",
    "org.apache.maven:maven-plugin-api"
  ],
  "packageRules": [
    {
      "matchPackageNames": ["org.apache.maven:maven-core", "org.apache.maven:maven-plugin-api"],
      "enabled": false
    },
    {
      "matchPackagePatterns": ["*"],
      "enabled": true
    }
  ],
  "labels": ["dependencies"],
  "schedule": ["at any time"]
}
